{
    "compilerOptions": {
      "baseUrl": "./src",
      "moduleResolution": "Node",
      "allowSyntheticDefaultImports": true,
      "noEmit": false,
      "noEmitOnError": false,
      "alwaysStrict": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "sourceMap": true,
      "lib": ["ES6","DOM","ES2017","ES7"],
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    }
}